{
    "name": "picsmasher",
    "version": "1.0.0",
    "description": "A powerful and intuitive web application that allows users to apply a variety of effects to their images.",
    "main": "./src/effects.js",
    "scripts": {
        "start": "webpack serve --open",
        "build": "npx webpack",
        "test": "jest --coverage",
        "lint": "eslint .",
        "format": "prettier --write ."
    },
    "jest": {
        "transform": {
            "^.+\\.jsx?$": "babel-jest"
        },
        "testEnvironment": "jsdom",
        "transformIgnorePatterns": [
            "/node_modules/(?!(sortablejs)/)"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "jsx",
            "ts",
            "tsx",
            "node"
        ],
        "moduleNameMapper": {
            "^sortablejs$": "<rootDir>/tests/__mocks__/sortablejs.js"
        },
        "snapshotSerializers": [
            "<rootDir>/config/jest.imageDataSerializer.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 40,
                "functions": 40,
                "lines": 50,
                "statements": 50
            }
        },
        "setupFiles": [
            "jest-canvas-mock"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/config/jest.setup.js"
        ],
        "reporters": [
            "default",
            [
                "jest-junit",
                {
                    "outputDirectory": "./tests/test-results",
                    "outputName": "jest-junit.xml"
                }
            ]
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/tests/__tests__/helpers/"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.25.8",
        "@babel/preset-env": "^7.25.8",
        "@eslint/js": "^9.13.0",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.2.1",
        "canvas": "^2.11.2",
        "css-loader": "^7.1.2",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "gh-pages": "^6.2.0",
        "globals": "^15.11.0",
        "html-webpack-plugin": "^5.6.2",
        "jest": "^29.7.0",
        "jest-canvas-mock": "^2.5.2",
        "jest-environment-jsdom": "^29.7.0",
        "jest-junit": "^16.0.0",
        "jsdom-global": "^3.0.2",
        "prettier": "^3.3.3",
        "style-loader": "^4.0.0",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0"
    },
    "dependencies": {
        "express": "^4.21.1",
        "request": "^2.88.2",
        "sortablejs": "^1.15.3",
        "util": "^0.12.5"
    }
}
